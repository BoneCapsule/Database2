<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="dao.UserDao">
    <insert id="insertUser" keyProperty="id" parameterType="model.User">
        INSERT INTO User(`id`, `name`, `charge`, `balance`)
        VALUES (#{id, jdbcType=INTEGER}, #{name,jdbcType=VARCHAR}, #{charge,jdbcType=DOUBLE},#{balance,jdbcType=DOUBLE});
    </insert>

    <select id="findUserByName" resultType="model.User">
        SELECT * FROM User WHERE name = #{name}
    </select>

    <select id="findUserById" resultType="model.User">
        SELECT * FROM User WHERE id = #{id}
    </select>
</mapper>